<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:listDivider">@drawable/listdivider</item>
        <item name="android:alertDialogTheme">@style/LightDialog</item>
    </style>


    <style name="AppTheme_night" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDark_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="android:windowBackground">@color/colorPrimary_night</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:alertDialogTheme">@style/NightDialog</item>
    </style>


    <style name="AppTheme_pink" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_pink</item>
        <item name="colorPrimaryDark">@color/colorPrimary_pink</item>
        <item name="colorAccent">@color/colorAccent_pink</item>
    </style>

    <style name="AppTheme_yellow" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_yellow</item>
        <item name="colorPrimaryDark">@color/colorPrimary_yellow</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PhotoTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/black</item>
    </style>


    <!-- tablayout-->
    <style name="DarkTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/DarkTabLayoutText</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>
    <!-- tablayout-->
    <style name="DarkTabLayoutText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--selectDialog-->
    <style name="SelectDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NightDialog" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowBackground">@color/dialog_background</item>
        <item name="android:windowTitleStyle">@style/DialogNightTitleStyle</item>
    </style>

    <style name="LightDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:windowTitleStyle">@style/DialogLightTitleStyle</item>
    </style>

    <style name="DialogLightTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DialogNightTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
